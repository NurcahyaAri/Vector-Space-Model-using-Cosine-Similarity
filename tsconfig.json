{
    "compilerOptions": {
      "target": "es2017",
      "declaration": true,
      "removeComments": true,                          
      "module": "commonjs",                    
      "lib": ["es6", "dom"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "./",
      "incremental": true,
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "./"
    },
    "include": ["./"],
    "exclude": ["node_modules", "**/__tests__/*", "build", "assets", "dist", "tests"]
}